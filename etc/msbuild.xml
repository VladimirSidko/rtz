        <Exec Command="&quot;$(HelpMan)\helpman.exe&quot; $(HelpSrc) /CHM=&quot;$(DistrKit)\hlp\help.chm&quot; /I=CHM,MDO" WorkingDirectory="$(Root)\hlp" />
